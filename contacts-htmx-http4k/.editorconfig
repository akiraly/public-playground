# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.properties]
charset = latin1

[*.bat]
charset = unset
end_of_line = crlf

[*.md]
trim_trailing_whitespace = unset

[**/resources/inputs/*]
insert_final_newline = false
